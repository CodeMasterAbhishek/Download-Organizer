{
  "manifest_version": 3,
  "name": "Download Organizer",
  "version": "1.0",
  "description": "Automatically organizes downloads by file type.",
  "permissions": ["downloads", "downloads.shelf", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo16.png",
      "48": "logo/logo48.png",
      "128": "logo/logo128.png"
    }
  }
}
